# bclindner zsh config

# options
setopt appendhistory notify extendedglob
unsetopt beep nomatch
# terminal/editor vars
ZSH=~/.zshrc.d
export TERM=xterm-256color
export EDITOR=nvim
# ignore untracked git files
DISABLE_UNTRACKED_FILES_DIRTY="true"
# ... on completion waiting
COMPLETION_WAITING_DOTS="true"
# history settings
HISTFILE=~/.histfile
HISTSIZE=500
SAVEHIST=500
# Darwin/BSD fixes
export CLICOLOR=1
export LSCOLORS=ExGxBxDxCxEgEdxbxgxcxd


# source all from ~/.zshrc.d, in order lexically
for file in `ls -1 ~/.zshrc.d/**/*.zsh`; do
  source $file
done

# GVM, if available
[[ -s "$HOME/.gvm/scripts/gvm" ]] &&  source "$HOME/.gvm/scripts/gvm"
# NVM, if available
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
# Android SDK, if available
if [ -d "$HOME/.android/sdk" ]; then
  export ANDROID_HOME=$HOME/.android/sdk
  export PATH=$PATH:$ANDROID_HOME/platform-tools/
fi

# vi: foldmethod=marker foldenable
