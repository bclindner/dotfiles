general {
        colors = false
        interval = 1
}

order += "wireless _first_"
order += "tztime local"

wireless _first_ {
        format_up = "wifi %quality"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = "%H:%M:%S %d %b %Y"
}

disk "/" {
        format = "/ %free free (%percentage_free)"
}

cpu_usage {
        format = "cpu %usage%%"
}
