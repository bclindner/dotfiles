! vim: set ft=xdefaults:

URxvt.termName: rxvt-unicode

! font
URxvt.font: xft:FONTNAME:size=FONTSIZE,xft:Symbola:size=12

! allow scrolling in secondary window (e.g. less, vim, etc)
URxvt.secondaryScreen: 1
URxvt.secondaryWheel: 1
URxvt.secondaryScroll: 0

! disable scrollbar
URxvt.scrollBar: false

URxvt.letterSpace: 0
URxvt.lineSpace: 0

! remove all the mode stuff i dont use
URxvt.iso14755: false
URxvt.iso14755_52: false

! plugins
URxvt.perl-ext-common: default,matcher,resize-font,selection-to-clipboard
