" line options
set number
set linebreak
set showbreak=">>>"
set showmatch
set visualbell
" search options
set hlsearch
set smartcase
set ignorecase
set incsearch
" set indent options (StandardJS 2 spaces)
set autoindent
set shiftwidth=2
set smartindent
set smarttab
set softtabstop=2
" make backspace not stupid
set backspace=indent,eol,start
" syntax highlighting
syntax enable
" delek colorscheme
colorscheme delek
